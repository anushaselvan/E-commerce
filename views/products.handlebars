<div>
    <h1>PRODUCTS</h1>
</div>
<div>

{{#each products as |product|}}
    <div class="product-cards">
        <div class="product-header">
            <h1>{{product.product_title}}</h1>
            <h2>{{product.price}}</h2>
        </div>
        <a href="./products/{{product.id}}">
        <img src="./images/{{product.filename}}" alt="{{product.filename}}">
        </a>
    </div>
{{/each}}

</div>